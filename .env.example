# Application environment
APP_ENV=local
LOG_LEVEL=INFO

# Database
DB_PATH=./data/jobs.db
DB_ECHO=false
MIGRATIONS_PATH=./migrations

# NLP / Classification
NLP_MODEL=distilbert-base-uncased-finetuned-sst-2-english
NLP_TASK=text-classification
NLP_DEVICE=cpu
NLP_MAX_LENGTH=512
NLP_BATCH_SIZE=4

# Scraping / Playwright
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_NAV_TIMEOUT_MS=30000
PLAYWRIGHT_MAX_RETRIES=3
PLAYWRIGHT_RATE_LIMIT_PER_DOMAIN=1
PLAYWRIGHT_DELAY_MS=500
USER_AGENT_OVERRIDE=""

# Pipeline concurrency & SSE
CONCURRENCY_GLOBAL=4
CONCURRENCY_PER_DOMAIN=1
HEARTBEAT_SECONDS=15

# Filtering defaults
FILTER_MIN_SCORE=0.5
FILTER_INCLUDE_KEYWORDS=""
FILTER_EXCLUDE_KEYWORDS=""
FILTER_LOCATIONS=""
FILTER_SENIORITY=""
FILTER_MAX_RESULTS=

# Base44 outbound
BASE44_ENDPOINT=https://api.base44.example/jobs
BASE44_TIMEOUT_SECONDS=15
BASE44_RETRIES=3
BASE44_MOCK=true
BASE44_API_KEY=""

# Server
HOST=0.0.0.0
PORT=8000

# Local test override: keep outbound mocked by default
USE_MOCK_OUTBOUND=true